@using Field_Groove.Application.Constants;
@model Feild_Groove.Domain.Models.LoginModel;

<head>
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<div class="LoginDiv">
	@if (ViewBag.status is not null)
	{
		<script>
			alert('@ViewBag.Status');
		</script>
	}
	<div class="container d-flex justify-content-between pt-4">
		<div>
			<a href="#"><img src="/images/logo-fieldgroove-blue.svg" alt="Feild_groove" width="270" /></a>
		</div>
		<div>
			<ul class="list-unstyled d-flex navItems">
				<li><a class="btn">@ApplicationConstants.Item1</a></li>
				<li>
					<a class="btn dropdown-toggle text-decoration-none" data-bs-toggle="dropdown" aria-expanded="false">
						@ApplicationConstants.Item2
					</a>
					<ul class="dropdown-menu dropdown-menu-dark navItems2">
						<li><a class="dropdown-item" href="#">flooring</a></li>
						<li><a class="dropdown-item" href="#">roofing</a></li>
						<li><a class="dropdown-item" href="#">drywall</a></li>
						<li><a class="dropdown-item" href="#">insulation</a></li>
					</ul>
				</li>
				<li><a class="btn">@ApplicationConstants.Item3</a></li>
				<li><a class="btn">@ApplicationConstants.Item4</a> </li>
				<li><a class="btn" asp-controller="Account" asp-action="Register">@ApplicationConstants.Item5</a> </li>
				<li><a class="btn navItems2" asp-controller="Account" asp-action="Login">@ApplicationConstants.Item6</a></li>
			</ul>
		</div>
	</div>
	<div class="BgImg">
		<div class="container d-flex justify-content-between p-0 containerStyle  mt-5">
			<form method="post" class="p-5 Loginformstyle rounded-2 ">
				<div class="vstack gap-3">
					<h3>SIGN IN</h3>

					<div class="vstack gap-1">
						<label asp-for="@Model.Email"></label>
						<input type="email" asp-for="@Model.Email" class="py-1 px-1" />
						<span asp-validation-for="@Model.Email" class="text-danger" style="font-size:14px"></span>
					</div>

					<div class="vstack gap-1">
						<label asp-for="@Model.Password"></label>
						<input type="password" asp-for="@Model.Password" class="py-1 px-1" />
						<span asp-validation-for="@Model.Password" class="text-danger" style="font-size:14px"></span>
					</div>


					<div class="d-flex">
						<input type="checkbox" class="me-1" />
						<label asp-for="@Model.RemenberMe"></label>
					</div>

					<div class=" d-flex gap-2 flex-sm-wrap flex-lg-nowrap">
						<a class="btn text-nowrap text-secondary border-secondary flex-fill">Forgot password?</a>

						<button type="submit" class="Signbtn btn d-flex align-items-center justify-content-center text-nowrap text-decoration-none text-white flex-fill">
							Sign In
							<span class="material-symbols-rounded">chevron_right</span>
						</button>
					</div>

				</div>
			</form>
			<div class=" p-5 rounded-2">
				<div>
					<h3 style="color:#E56355;">NEED AN ACCOUNT?</h3>
				</div>
				<div>
					<p class="loginPara">
						@ApplicationConstants.LoginPara
					</p>
				</div>
				<a class="btn createbtn">Create New Account</a>
			</div>
		</div>
	</div>
	<div class="mt-5">
		<div class="d-flex justify-content-center ">
			<ul class="text-uppercase list-unstyled hstack gap-4 navItems">
				<li><a>@ApplicationConstants.Item1</a></li>
				<li class="text-secondary">|</li>
				<li><a>@ApplicationConstants.Item3</a></li>
				<li class="text-secondary">|</li>
				<li><a>@ApplicationConstants.Item4</a></li>
				<li class="text-secondary">|</li>
				<li><a asp-controller="Account" asp-action="Login">@ApplicationConstants.Item6</a></li>
				<li class="text-secondary">|</li>
				<li><a asp-controller="Account" asp-action="Register">@ApplicationConstants.Item5</a></li>
			</ul>
		</div>
		<div class="LoginFooterBg">
			<div class="container LoginFooter d-flex justify-content-between">
				<div class="w-25">
					<div>
						<img src="/images/logo-footer.jpg" alt="Footer Logo" />
					</div>
					<div>
						<p>
							Copyright © FieldGroove, LLC 2024. All Rights Reserved.716 Newman Springs Road, Suite 307 Lincroft, NJ 07738
						</p>
						<p>
							<a href="#" style="color:#E76655;text-decoration:none">Privacy Policy</a>
						</p>
					</div>
				</div>
				<div class="w-25">
					<p>
						We would love to show you the power of FieldGroove.
						To setup a demo or get an account setup, please contact us at
						<a style="color:#E76655;text-decoration:none" href="#">@ApplicationConstants.LoginFooterEmail</a>
						or by phone at
						<a style="color:#E76655;text-decoration:none" href="#">@ApplicationConstants.LoginFooterPhone</a>
					</p>
				</div>
			</div>
		</div>
	</div>
	<div class="fixedchatbtn">
		<button class="border-0 rounded-circle p-2" style="background-color:#3957A9">
			<span class="heroicons--chat-bubble-left-right-solid"></span>
		</button>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}